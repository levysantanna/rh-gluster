# Example bonding
network_bond_interfaces:
  - device: bond0
    onboot: yes
    address: 10.62.4.11
    netmask: 255.255.255.192
    gateway: 10.62.4.1
    mtu: 9000
    bootproto: static
    bond_mode: active-backup
    bond_miimon: 100
    bond_slaves: [eth0]
  - device: bond1
    onboot: yes
    address: 10.62.5.11
    netmask: 255.255.255.192
    bootproto: static
    bond_mode: active-backup
    bond_miimon: 100
    mtu: 9000
    bond_slaves: [eth1]

